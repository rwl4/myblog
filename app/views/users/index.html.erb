<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.phone %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Edit', edit_user_path(user) %> |
        <%= link_to 'Delete', user_path(user), method: :delete, confirm: 'Are you sure you want to delete this user?' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path %>